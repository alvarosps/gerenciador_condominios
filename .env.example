# Condominios Manager - Environment Configuration Template
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================

# Secret key for Django (generate a new one for production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# Debug mode (NEVER set to True in production)
DEBUG=True

# Allowed hosts (comma-separated list)
# Production example: ALLOWED_HOSTS=example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=condominio
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Optional: Database connection pool settings (for production)
# DB_CONN_MAX_AGE=600
# DB_OPTIONS={"sslmode": "require"}

# =============================================================================
# PDF GENERATION
# =============================================================================

# Chrome/Chromium executable path for pyppeteer
# Windows default: C:\Program Files\Google\Chrome\Application\chrome.exe
# Linux: /usr/bin/chromium-browser or /usr/bin/google-chrome
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
CHROME_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# PDF output directory (relative to BASE_DIR)
PDF_OUTPUT_DIR=contracts

# PDF generation timeout (seconds)
PDF_GENERATION_TIMEOUT=30

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT access token lifetime (in minutes)
# Default: 60 minutes (1 hour)
JWT_ACCESS_TOKEN_LIFETIME=60

# JWT refresh token lifetime (in minutes)
# Default: 1440 minutes (24 hours)
JWT_REFRESH_TOKEN_LIFETIME=1440

# Rotate refresh tokens on use (True/False)
# If True, a new refresh token is issued each time the old one is used
JWT_ROTATE_REFRESH_TOKENS=True

# Blacklist refresh tokens after rotation (True/False)
# Prevents reuse of old refresh tokens (requires djangorestframework-simplejwt[crypto])
JWT_BLACKLIST_AFTER_ROTATION=True

# JWT signing algorithm
JWT_ALGORITHM=HS256

# =============================================================================
# GOOGLE OAUTH 2.0 CONFIGURATION
# =============================================================================

# Google OAuth 2.0 Client ID and Secret
# Get these from Google Cloud Console: https://console.cloud.google.com/
#
# Setup instructions:
# 1. Go to Google Cloud Console
# 2. Create a new project or select existing one
# 3. Enable Google+ API (APIs & Services > Library > Google+ API)
# 4. Go to APIs & Services > Credentials
# 5. Create OAuth 2.0 Client ID (Application type: Web application)
# 6. Add authorized redirect URIs:
#    - http://localhost:8000/accounts/google/login/callback/
#    - http://localhost:6000/auth/callback (for frontend)
#    - Add production URLs when deploying
# 7. Copy Client ID and Client Secret to the variables below

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL for OAuth redirects (where JWT tokens will be sent after successful OAuth)
FRONTEND_URL=http://localhost:6000

# OAuth redirect path on frontend (will be appended to FRONTEND_URL)
FRONTEND_AUTH_CALLBACK_PATH=/auth/callback

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Development default includes React and Vite default ports
CORS_ALLOWED_ORIGINS=http://localhost:6000,http://localhost:5173,http://127.0.0.1:6000,http://127.0.0.1:5173

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default pagination size for API responses
PAGE_SIZE=20

# Tag fee for single tenant (in BRL)
DEFAULT_TAG_FEE_SINGLE=50.00

# Tag fee for multiple tenants (in BRL)
DEFAULT_TAG_FEE_MULTIPLE=80.00

# Late payment fee percentage per day (5% = 0.05)
LATE_FEE_PERCENTAGE=0.05

# Days considered for late fee calculation (30 days = 1 month)
DAYS_PER_MONTH=30

# =============================================================================
# STATIC FILES & MEDIA
# =============================================================================

# Static files URL prefix
STATIC_URL=/static/

# Static files root directory (production)
# STATIC_ROOT=/var/www/condominios_manager/static/

# Media files URL prefix
MEDIA_URL=/media/

# Media files root directory
# MEDIA_ROOT=/var/www/condominios_manager/media/

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, leave empty to log to console only)
# LOG_FILE=/var/log/condominios_manager/app.log

# =============================================================================
# SECURITY SETTINGS (PRODUCTION ONLY)
# =============================================================================

# HTTPS settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# =============================================================================
# EMAIL CONFIGURATION (FUTURE)
# =============================================================================

# Email backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@condominiosmanager.com

# =============================================================================
# CACHE CONFIGURATION (Phase 4: Redis Caching)
# =============================================================================

# Redis URL for caching
# Development: redis://127.0.0.1:6379/0
# Docker: redis://redis:6379/0 (automatically set in docker-compose)
REDIS_URL=redis://127.0.0.1:6379/0

# Cache timeout in seconds (default: 300 = 5 minutes)
CACHE_TIMEOUT=300

# Cache middleware settings
CACHE_MIDDLEWARE_SECONDS=300

# =============================================================================
# CELERY CONFIGURATION (FUTURE - for async tasks)
# =============================================================================

# Celery broker URL (Redis or RabbitMQ)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MONITORING & ANALYTICS (FUTURE)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Django Debug Toolbar (only in development)
ENABLE_DEBUG_TOOLBAR=False

# Django Extensions
# DJANGO_EXTENSIONS_ENABLED=True

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the project root
# 2. Update all values marked with CHANGE-THIS
# 3. Generate a new SECRET_KEY for production
# 4. Never commit .env to version control
# 5. Add .env to .gitignore (already done)
# 6. For production, use a secret management system (AWS Secrets Manager, HashiCorp Vault, etc.)
