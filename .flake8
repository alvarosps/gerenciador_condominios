# .flake8 - Configuration for Flake8 linter
# Condominios Manager - Enterprise Refactoring Project

[flake8]
# Maximum line length (aligned with Black)
max-line-length = 100

# Exclude directories from linting
exclude =
    .git,
    __pycache__,
    */migrations/*,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    backups,
    contracts,
    metrics,
    htmlcov,
    frontend,
    node_modules

# Error codes to ignore
# E203: Whitespace before ':' (conflicts with Black)
# E266: Too many leading '#' for block comment
# E501: Line too long (handled by Black)
# W503: Line break before binary operator (conflicts with Black)
# W504: Line break after binary operator (conflicts with Black)
ignore = E203, E266, E501, W503, W504

# Maximum complexity for McCabe complexity checker
max-complexity = 10

# Enable specific error codes
select = B,C,E,F,W,T4,B9

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
    # Settings files can have multiple imports on one line
    */settings.py:E402
    # Test files can have unused imports and long lines
    tests/*.py:F401,E501
    # Migration files generated by Django
    */migrations/*.py:E501,F401

# Show source code for each error
show-source = true

# Show error codes in output
show-pep8 = true

# Count errors
count = true

# Display statistics
statistics = true

# Format output
format = default

# Inline quotes style (single quotes preferred, but not enforced)
inline-quotes = single

# Docstring conventions (Google style)
docstring-convention = google

# Require code to be compatible with specific Python version
# python-version = 3.11

# Warnings category
# Application import names that should trigger warnings
application-import-names = core,condominios_manager

# Enable pydocstyle integration
# D100: Missing docstring in public module
# D101: Missing docstring in public class
# D102: Missing docstring in public method
# D103: Missing docstring in public function
# D104: Missing docstring in public package
# We'll enable these gradually in Phase 2
extend-ignore = D100, D101, D102, D103, D104, D105, D106, D107

# Specify which plugins to enable
enable-extensions = G

# Radon integration (complexity)
radon-max-cc = 10
radon-no-assert = false
radon-show-closures = false
